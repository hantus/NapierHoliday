<Window x:Class="Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Napier Holiday" Height="350" Width="525">
    <Grid Background="#95B7F2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="249*"/>
            <ColumnDefinition Width="268*"/>
        </Grid.ColumnDefinitions>
        <Label Content="NAPIER HOLIDAY" HorizontalAlignment="Left" Margin="149,29,0,0" VerticalAlignment="Top" Width="227" FontWeight="Bold" FontSize="24" FontFamily="Arial Rounded MT Bold" Grid.ColumnSpan="2"/>
        <Button x:Name="btnBook" Content="Book" HorizontalAlignment="Left" Margin="181,124,0,0" VerticalAlignment="Top" Width="146" FontFamily="Arial Rounded MT Bold" Background="White" Foreground="#407FEE" Grid.ColumnSpan="2" Click="btnBook_Click"/>
        <Button x:Name="btnBookinList" Content="Booking List" HorizontalAlignment="Left" Margin="181,173,0,0" VerticalAlignment="Top" Width="146" FontFamily="Arial Rounded MT Bold" Background="White" Foreground="#407FEE" Grid.ColumnSpan="2" Click="btnBookinList_Click"/>
        <Button x:Name="btnClients" Content="Client List" HorizontalAlignment="Left" Margin="181,222,0,0" VerticalAlignment="Top" Width="146" FontFamily="Arial Rounded MT Bold" Background="White" Foreground="#407FEE" Grid.ColumnSpan="2" Click="btnClients_Click"/>

    </Grid>
</Window>
